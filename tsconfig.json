{
  "compilerOptions": {
    "target": "ES2015", 
    "module": "commonjs",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "noEmit": true,
    "allowJs": true,
    "rootDir": "./src",
    "strict": true, 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}